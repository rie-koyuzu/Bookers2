<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/list', book: @newbook %>
    </div>
  <div class="col-md-8 offset-md-1">

      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100), fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>