<table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
      <%= image_tag user.get_profile_image(100, 100), fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <% if current_user == user %>
          <%= link_to  edit_user_path(current_user.id), class:"btn btn-default btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <% end %>
        <% else %>
          <%= link_to  edit_user_path(user.id), class:"btn btn-default btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <% end %>
        <% end %>

      </th>
    </tr>
  </tbody>
</table>